{
  "name": "claude-code-dispatcher",
  "version": "0.2.0",
  "description": "Local-first CLI tool that integrates Claude Code with GitHub for automated issue processing, running in your dev environment with full toolchain access",
  "main": "dist/index.js",
  "bin": {
    "claude-code-dispatcher": "./bin/claude-code-dispatcher"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/commands/index.js",
    "dev": "ts-node src/commands/index.ts",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:unit": "jest --testPathIgnorePatterns=/integration/",
    "test:integration": "jest tests/integration/simple-integration.test.ts --testTimeout=30000",
    "test:integration:all": "jest tests/integration --testTimeout=60000",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "claude",
    "github",
    "automation",
    "cli",
    "dispatcher"
  ],
  "author": "k1e1n04",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/k1e1n04/claude-code-dispatcher.git"
  },
  "dependencies": {
    "commander": "^11.0.0",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/",
    "bin/",
    "README.md",
    "LICENSE"
  ]
}
